<div class="question_wrapper">
  <div class="question_details">
    <div class="votes">
      <span><%= q.votes %></span>
      <p>Votes</p>
    </div>
    <div class="answers">
      <span><%= q.answers.length %></span>
      <p>Answers</p>
    </div>
    <div class="views">
      <span><%= q.views %></span>
      <p>Views</p>
    </div>
  </div>
  <div class="question_title">
    <a style="display: block"  href="http://localhost:2000/blog/questions/<%=q._id %>">
      <h4 class="title"><%= q.title %></h4>
      <p><%= q.body %></p>
    </a>
    <div class="tags">
      <% for (let tag of q.tags) { %>
        <span><%= tag.title %></span>
      <% } %>
    </div>
  </div>
</div>